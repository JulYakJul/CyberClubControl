@page
@model CybontrolX.Pages.LoginModel
@{
    ViewData["Title"] = "Вход";
    Layout = "_LoginLayout";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="register-login-card mx-auto" style="width: 28rem;">
        <div class="card-body" style="color: white;">
            <h2 class="card-title text-center mb-4">Вход</h2>

            <form method="post" asp-route-returnurl="@Model.ReturnUrl">
                <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

                <div class="form-group mb-3">
                    <label asp-for="UserName" class="form-label">Логин</label>
                    <input asp-for="UserName" class="form-control"
                           style="background-color: #343a40; color: white;" />
                    <span asp-validation-for="UserName" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label">Пароль</label>
                    <input asp-for="Password" type="password" class="form-control"
                           style="background-color: #343a40; color: white;" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary">Войти</button>
                </div>

                <div class="text-center">
                    <a href="/Register" class="small" style="color: #7101fb;">Нет аккаунта? Зарегистрируйтесь</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        margin: 0;
        min-height: 100vh;
        background: url('/images/BGLoginRegister.png') no-repeat center center fixed;
        background-size: cover;
    }
</style>